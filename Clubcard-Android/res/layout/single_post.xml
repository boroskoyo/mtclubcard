<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
     >

    <TextView
        android:id="@+id/discountRate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="14dp"
        android:fontFamily="sans-serif-bold"
        android:text="%20" />

    <TextView
        android:id="@+id/companyNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/discountRate"
        android:layout_marginLeft="10dp"
        android:text="Medium Text"
        android:textColor="@color/mekanColor"
        android:textSize="16dp"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/companyDistrictField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/discountRate"
        android:layout_alignLeft="@+id/companyNameField"
        android:text="Small Text"
        android:textColor="@color/semtColor"
        android:textSize="14dp"
        android:fontFamily="sans-serif-light" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/arrow" />

</RelativeLayout>